{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 20
    },
    "firstName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30
    },
    "lastName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 30
    },
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 60,
      "format": "email"
    },
    "isAdmin": {
      "type": "boolean"
    }
  },
  "additionalProperties": true,
  "required": ["firstName", "lastName", "password", "email"]
}
